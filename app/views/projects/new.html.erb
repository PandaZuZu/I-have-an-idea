<div class="row">
  <div class="col-md-4">
    <!-- empty -->
  </div>
  <div class="form_input">
    <%= form_for @project do |f|%>
        <p><%= f.text_field :title, size:'50', class:"input_field", placeholder:'Title' %></p>
        <p><%= f.text_area :description, size:'55x10', placeholder:'Description' %></p>
        <p><%= f.file_field :pictures, multiple: true %></p>
        <p><%= f.submit "Add", class:'button' %> </p>
        <p><%= label_tag '100', nil,  style:'font-size:15px' %><%= image_tag("coin.png", size: "25x25") %></p>
    <% end %>
    <% if flash[:alert].present? %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>
  </div>
  <div class="col-md-4">
    <!-- empty -->
  </div>
</div>
