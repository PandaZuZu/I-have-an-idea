<div class="row">
  <div class="col-md-4">
    <!-- empty -->
  </div>
  <%= form_tag login_path do %>
    <div class="form_input">
      <p><%= text_field_tag :username, nil , class:"input_field col-xs-12", placeholder:'Email' %></p>
      <p><%= password_field_tag :password, nil, class:"input_field col-xs-12", placeholder:'Password' %></p>
      <p><%= submit_tag "Log in", class:'button' %></p>
      <p><%= link_to "No account? Register here.", register_path %></p>
      <% if flash[:alert].present? %>
        <p class="alert"><%= flash[:alert] %></p>
      <% end %>
    </div>
  <% end %>
  <div class="col-md-4">
    <!-- empty -->
  </div>
</div>
